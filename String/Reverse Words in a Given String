class Solution {
public:
     string reverseWords(string s{ 
       string res="";
       string r="";
       reverse(s.begin(),s.end());
       for(int i =0;i<s.size();i++){
           if(s[i]=='.'){
               reverse(res.begin(),res.end());
               r+=res;
               r+='.';
                res="";
           } 
           else{
               res+=s[i];
           }
       }      
       reverse(res.begin(),res.end());
       return r+res;  
    } 
};
